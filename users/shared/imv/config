[options]
background = 111111
fullscreen = true
loop_input = true
overlay_font = Terminus:20
overlay_text_color = #c3beba
scaling_mode = shrink
suppress_default_binds = true

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the command.
# alias = command to run

[binds]
q = quit
i = exec notify-send "$imv_current_index $imv_current_file"

# Image navigation
<Up> = prev 10
<Down> = next 10
<bracketleft> = prev
<bracketright> = next
<Left> = prev
<Right> = next

gg = goto 0
<Shift+G> = goto -1

# Panning
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0

# Zooming
<plus> = zoom 1
<minus> = zoom -1

# Other commands
x = close
<Ctrl+x> = exec rm "$imv_current_file"; close

f = fullscreen
o = overlay
p = exec echo $imv_current_file
c = exec cp "$imv_current_file" ~/pics; exec notify-send "ðŸ’œ"
e = exec gimp "$imv_current_file" &
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
t = toggle_playing

# Slideshow control
<space> = slideshow +3
<Shift+space> = slideshow 0
