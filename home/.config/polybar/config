[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[colors]
background = #d0303030
background-transparent = #00303030
background-alt = #0f0f0f
background-alt-2 = #ff5fafcf
foreground = #BEB3CD
foreground-alt = #c1c2c3
red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c
orange = #fe8019
white = #dddddd
blue_arch = #83afe1
grey = #5b51c9
grey1 = #5bb1c9
grey2 = #5bf1c9

[bar/base]
font-0 = Terminus:size=14;0
font-1 = Siji:size=14;0
width = 100%
height = 24
offset-x = 0
offset-y = 0
fixed-center = true

background = ${colors.background-alt}
foreground = ${colors.foreground}

overline-size = 0
underline-size = 0

border-bottom-size = 0
border-bottom-color = #ffffff

module-margin-left = 1
module-margin-right = 1


radius = 0.0

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

tray-position = none
tray-padding = 2
tray-background = ${root.background}
padding-left = 1
padding-right = 1

[bar/laptop-bottom]
inherit = bar/base
bottom = true

modules-left = workspaces-xmonad
modules-center = title-short
modules-right = weather date

[bar/desktop-bottom]
inherit = bar/base
bottom = true

modules-left = workspaces-xmonad
modules-center = title
modules-right = weather date

[bar/desktop-top]
inherit = bar/base
bottom = false

modules-left = volume gpmdp
modules-center = filesystem
modules-right = vnc ssh eth cpu memory battery

[bar/laptop-top]
inherit = bar/base
bottom = false

modules-left = volume gpmdp
modules-center = filesystem
modules-right = vnc ssh wlp2s0 cpu memory battery

[module/title]
type = internal/xwindow
label-maxlen = 170

[module/title-short]
type = internal/xwindow
label-maxlen = 70

[module/workspaces-xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad-workspace-log
exec-if = [ -p /tmp/.xmonad-workspace-log ]
tail = true

[module/vnc]
type = custom/script
exec-if = pgrep x11vnc
exec = echo "%{F#FF79C6}vnc%{F-} $(lsof -Pni | grep x11vnc | grep -v LISTEN | wc -l)"
click-right = pkill x11vnc
interval = 2

[module/ssh]
type = custom/script
exec-if = pgrep sshd
exec = echo "%{F#FF79C6}ssh%{F-} $(who | grep pts | wc -l)"
click-right = sudo systemctl stop sshd
interval = 2

[module/weather]
type = custom/script
exec = ~/.config/polybar/weather.sh
interval = 300

[module/gpmdp]
type = custom/script
exec-if = pgrep -f google-play-music-desktop-player
exec = ~/.config/polybar/gpmdp.sh
interval = 2
format-foreground = #6B5A68
click-right = pkill -f google-play-music-desktop-player

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /storage

; format-prefix = " "
label-mounted = %{F#9c71C7}%mountpoint%%{F-} %free%
label-unmounted =
label-unmounted-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
# ls -l /sys/class/power_supply
battery = BAT0
adapter = AC
full-at = 98

format-charging = %{F#9c71C7}%{F-} <label-charging>
format-discharging = %{F#9c71C7}%{F-} <label-discharging>

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  %{F#9c71C7}%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage:3%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{F#9c71C7}%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage_used:3%%

[module/eth]
type = internal/network
interface = enp4s0
interval = 1.0
label-connected = %{A1:sh ~/.config/polybar/local_and_public_ips.sh:} %{F#9c71C7}%{F-}%downspeed:8%   %{F#9c71C7}%{F-}%upspeed:8%%{A}

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 1.0
label-connected = %essid% %{A1:sh ~/.config/polybar/local_and_public_ips.sh:} %{F#9c71C7}%{F-}%downspeed:8%   %{F#9c71C7}%{F-}%upspeed:8%%{A}
format-connected = <label-connected>

[module/wlp2s0]
type = internal/network
interface = wlp2s0
interval = 1.0
label-connected = %essid% %{A1:sh ~/.config/polybar/local_and_public_ips.sh:} %{F#9c71C7}%{F-}%downspeed:8%   %{F#9c71C7}%{F-}%upspeed:8%%{A}
format-connected = <label-connected>

[module/date]
type = internal/date
interval = 5

date = " %A %B %d"
time = %H:%M

format-prefix = "%{F#9c71C7}%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}

label = %{F#6B5A68}%date%%{F-}  %time%

[module/volume]
type = internal/pulseaudio
interval = 2

label-volume = "%{F#9c71C7} %{F-}%percentage%%"
label-volume-foreground = ${root.foreground}

format-muted-prefix = "%{F#9c71C7}%{F-} "
format-muted-foreground = #6B5A68

; vim: set ft=dosini:
