[bar/desktop]
inherit = bar/base

padding-left = 1
padding-right = 1

modules-left = cpu memory battery workspaces-xmonad
modules-center = title-xmonad
modules-right = backlight eth filesystem volume date

[bar/laptop]
inherit = bar/base
monitor = ${env:MONITOR:eDP1}
monitor-fallback = ${env:MONITOR:HDMI1}

modules-left = workspaces-xmonad title-xmonad
modules-center = mpd volume
modules-right = redshift updates battery backlight date powermenu

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÔÑú "
format-prefix-foreground = ${colors.foreground}
format-prefix-underline = ${colors.grey}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.grey}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /storage

label-mounted = %{F#5b51c9}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground}

[module/updates]
type = custom/script
